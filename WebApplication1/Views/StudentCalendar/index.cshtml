@model WebApplication1.Models.CalendarViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Kalendarz Studenta</title>
    <style>
        /* Ogólne style */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        /* Styl dla paska nawigacyjnego */
        .navbar {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

            .navbar ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                gap: 15px;
            }

            .navbar li {
                display: inline;
            }

            .navbar a {
                color: white;
                text-decoration: none;
                font-size: 1rem;
            }

                .navbar a:hover {
                    text-decoration: underline;
                }

        /* Kontener kalendarza */
        .calendar-container {
            width: 90%;
            max-width: 1200px;
            margin: 80px auto; /* Dodaje odstęp od góry dla nawigacji */
            overflow: auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            table-layout: fixed;
        }

        th, td {
            border: 1px solid #ddd;
            text-align: center;
            padding: 15px;
            vertical-align: top;
        }

        th {
            background-color: #f4f4f4;
            font-size: 1.1em;
        }

        td {
            min-width: 120px;
            height: 150px;
            position: relative;
        }

        .event {
            font-size: 0.9em;
            color: #007bff;
            margin: 2px 0;
            display: block;
            text-overflow: ellipsis;
        }

        h1 {
            text-align: center;
            width: 100%;
            margin: 20px 0;
            font-size: 2rem;
        }
    </style>
</head>
<body>
    <!-- Pasek nawigacyjny -->
    

    <!-- Nagłówek strony -->
    <h1>Kalendarz Studenta - @DateTime.Now.ToString("MMMM yyyy")</h1>

    <!-- Kalendarz -->
    <div class="calendar-container">
        <table>
            <thead>
                <tr>
                    <th>Pon</th>
                    <th>Wt</th>
                    <th>Śr</th>
                    <th>Czw</th>
                    <th>Pt</th>
                    <th>Sob</th>
                    <th>Ndz</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var week in Model.Days)
                {
                    <tr>
                        @foreach (var day in week)
                        {
                            if (day == null)
                            {
                                <td></td>
                            }
                            else
                            {
                                <td>
                                    <strong>@day.Date.Day</strong>
                                    @if (day.Events != null && day.Events.Any())
                                    {
                                        <ul>
                                            @foreach (var evt in day.Events)
                                            {
                                                <li class="event">@evt</li>
                                            }
                                        </ul>
                                    }
                                </td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
